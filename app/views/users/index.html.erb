<div class="d-flex justify-content-between align-items-center">
  <p class="h1">All users (<%= @users.length %>)</p>
  <%= link_to new_user_path, class: "btn btn-primary" do %>
    <i class="fa fa-plus" aria-hidden="true"></i>
    <span>New user</span>
  <% end %>
</div>

<table class = "table mt-3">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">First</th>
      <th scope="col">Last</th>
      <th scope="col">Email</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td class="flex-row justify-content-left align-items-center">
          <%= link_to "Show", user , class: "p-2"%>
          <%= link_to "Edit", edit_user_path(user) , class: "p-2"%>
          <%= link_to "Destroy", user, class: "p-2", method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>