<div class="d-flex justify-content-between align-items-center">
  <p class="h1">All ingredients (<%= @all_ingredients.length %>)</p>
  <%= link_to new_ingredient_path, class: "btn btn-primary" do %>
    <i class="fa fa-plus" aria-hidden="true"></i>
    <span>New ingredient</span>
  <% end %>
</div>

<table class="table mt-3">
  <thead class="thead-dark">
  <tr>
    <th scope="col">#</th>
    <th scope="col">Name</th>
    <th scope="col">Info</th>
    <th scope="col">Group</th>
    <th scope="col">Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @all_ingredients.each do |ingredient| %>
    <tr>
      <td><%= ingredient.id %></td>
      <td><%= ingredient.name %></td>
      <td><%= ingredient.info %></td>
      <td><%= ingredient.group %></td>
      <td class="flex-row justify-content-left align-items-center">
        <%= link_to "Show", ingredient, class: "p-2" %>
        <%= link_to "Edit", edit_ingredient_path(ingredient), class: "p-2" %>
        <%= link_to "Destroy", ingredient, class: "p-2", method: :delete, data: { confirm: "Are you sure?" } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<p class="divider">