<div class="d-flex justify-content-between align-items-center">
  <p class="h1">All ingredients (<%= @ingredients.length %>)</p>
  <%= link_to new_ingredient_path, class: "btn btn-primary" do %>
    <i class="fa fa-plus" aria-hidden="true"></i>
    <span>New ingredient</span>
  <% end %>
</div>

<table class = "table mt-3">
  <thead class="thead-dark">
  <tr>
    <th scope="col">#</th>
    <th scope="col">Name</th>
    <th scope="col">Info</th>
    <th scope="col">Group</th>
    <th scope="col">Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @recipes.each do |recipe| %>
    <tr>
      <td><%= recipe.id %></td>
      <td><%= recipe.name %></td>
      <td><%= recipe.info %></td>
      <td><%= recipe.group %></td>
      <td class="flex-row justify-content-left align-items-center">
        <%= link_to "Show", recipe , class: "p-2"%>
        <%= link_to "Edit", edit_recipe_path(recipe) , class: "p-2"%>
        <%= link_to "Destroy", recipe, class: "p-2", method: :delete, data: { confirm: "Are you sure?" } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>